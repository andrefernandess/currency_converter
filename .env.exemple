# .env.example
# Copie para .env e preencha com seus valores reais

# ==================================================
# API de Conversão de Moedas
# ==================================================
# Obtenha gratuitamente em: https://currencyapi.com/
CURRENCY_API_KEY=cur_live_your_key_here

# ==================================================
# Database (PostgreSQL)
# ==================================================
# Desenvolvimento local:
DATABASE_URL=postgresql://postgres:postgres@localhost/currency_converter_development

# Produção (Azure):
# DATABASE_URL=postgresql://dbadmin:senha@servidor.postgres.database.azure.com/currency_converter_production?sslmode=require

# ==================================================
# Rails
# ==================================================
# Gere com: rails secret
SECRET_KEY_BASE=your_secret_key_base_here

# Ambiente
RAILS_ENV=development

# ==================================================
# Opcional (para credentials criptografadas)
# ==================================================
# RAILS_MASTER_KEY=your_master_key_here
